FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --only=production && npm cache clean --force

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S sfo -u 1001

# Change ownership
RUN chown -R sfo:nodejs /app
USER sfo

EXPOSE 3000

CMD ["npm", "start"]